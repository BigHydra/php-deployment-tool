{% extends 'QaSystemCoreBundle::base.html.twig' %}

{% block headline %}Project{% endblock %}

{% block content_content %}
    <a href="{{ path('project') }}" class="btn btn-default">
        Back to the list
    </a>
    <a href="{{ path('project_edit', { 'id': entity.id }) }}" class="btn btn-default pull-right">
        Edit
    </a>

    {# @TODO: ugly hack #}
    <br>
    <br>

    <div class="well">
        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr>

    <div class="hide">
        {{ form(delete_form) }}
    </div>
{% endblock %}
