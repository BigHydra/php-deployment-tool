{% extends 'QaSystemCoreBundle::base.html.twig' %}

{% block headline %}Project{% endblock %}

{% block content_content %}
    <a href="{{ path('project') }}" class="btn btn-default">
        Back to the list
    </a>
    <a href="{{ path('project_edit', { 'id': entity.id }) }}" class="btn btn-default pull-right">
        Edit
    </a>

    {# @TODO: ugly hack #}
    <br>
    <br>

    <div class="well">
        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Uri</th>
                    <td>{{ entity.uri }}</td>
                </tr>
                <tr>
                    <th>Current branch</th>
                    <td>
                        {{ entity.repository.mainBranch.name }}
                        <br>
                    </td>
                </tr>
                <tr>
                    <th>Current Commit</th>
                    <td>
                        {{ entity.repository.getCommit(entity.repository.mainBranch).dateTimeAuthor | date("m/d/Y H:i") }}<br>
                        {{ entity.repository.mainBranch.sha }}<br>
                        {{ entity.repository.getCommit(entity.repository.mainBranch).author.name }} -
                        {{ entity.repository.getCommit(entity.repository.mainBranch).author.email }}<br>
                        {{ entity.repository.mainBranch.comment }}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr>

    <div class="well">
        <div class="text-center">
            <a href="{{ path('project_pull', {'id': entity.id}) }}" class="btn btn-default btn-lg">Update</a>
        </div>

        <h3>Local branches</h3>
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <th>Branch</th>
                <th>Actions</th>
            </thead>
            <tbody>
                {% for branch in entity.repository.branches %}
                    <tr>
                        <td>{{ branch.name }}</td>
                        <td class="text-center">
                            <a href="{{ path('project_checkout', {'id': entity.id, 'branch': branch.name|e('url')}) }}" class="btn btn-default">Switch</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="well">
        <h3>Remote branches</h3>
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <th>Repository</th>
                <th>Branch</th>
                <th>Actions</th>
            </thead>
            <tbody>
                {% for remote in entity.repository.remotes %}
                    {% for name, details in remote.branches %}
                    <tr>
                        <td>{{ remote.name | capitalize }}</td>
                        <td>{{ name }}</td>
                        <td class="text-center">
                            <a href="{{ path('project_checkout', {'id': entity.id, 'branch': name|e('url')}) }}" class="btn btn-default">Get</a>
                        </td>
                    </tr>
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="hide">
        {{ form(delete_form) }}
    </div>
{% endblock %}