{% extends 'QaSystemCoreBundle::base.html.twig' %}

{% block headline %}Recipe{% endblock %}

{% block content_content %}
    <p>
        <a href="{{ path('recipe') }}" class="btn btn-default">
            Back to the list
        </a>
        <a href="{{ path('recipe_edit', { 'id': entity.id }) }}" class="btn btn-default pull-right">
            Edit
        </a>
    </p>

    <table class="table table-hover table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Workflow</th>
                <td><pre>{{ entity.workflow | jsonPretty }}</pre></td>
            </tr>
        </tbody>
    </table>

    <hr>

    {{ form(delete_form) }}
{% endblock %}

{% block content_sidebar %}
    <legend>Placeholders</legend>

    {{ include('@QaSystemCore/Recipe/_placeholders.html.twig') }}

{% endblock %}
