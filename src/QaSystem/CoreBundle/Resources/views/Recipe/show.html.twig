{% extends 'QaSystemCoreBundle::base.html.twig' %}

{% block headline %}Recipe{% endblock %}

{% block content_content %}
    <a href="{{ path('recipe') }}" class="btn btn-default">
        Back to the list
    </a>
    <a href="{{ path('recipe_edit', { 'id': entity.id }) }}" class="btn btn-default pull-right">
        Edit
    </a>

    {# @TODO: ugly hack #}
    <br>
    <br>

    <table class="table table-hover table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Workflow</th>
                <td>{{ entity.workflow | nl2br }}</td>
            </tr>
        </tbody>
    </table>

    <hr>

    {{ form(delete_form) }}
{% endblock %}
