{% extends 'QaSystemCoreBundle::base.html.twig' %}

{% block headline %}Recipe list{% endblock %}

{% block content_content %}
    <p>
        <a href="{{ path('homepage') }}" class="btn btn-default">
            Back to the homepage
        </a>
        <a href="{{ path('recipe_new') }}" class="btn btn-default pull-right">
            Create a new entry
        </a>
    </p>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('recipe_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td class="text-center">
                    <a href="{{ path('recipe_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('recipe_edit', { 'id': entity.id }) }}" class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
