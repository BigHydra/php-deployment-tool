{% extends 'QaSystemCoreBundle::base.html.twig' %}

{% block content %}
    <h1>Deployment list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr class="
            {% if entity.status == 'error' %}
            danger
            {% elseif entity.status == 'deployed' %}
            success
            {% elseif entity.status == 'deploying' %}
            active
            {% endif %}
            ">
                <td><a href="{{ path('deployment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.status }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('deployment_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('deployment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
